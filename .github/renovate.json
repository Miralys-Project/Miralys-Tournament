{
  "extends": ["config:recommended"],
  "enabledManagers": ["npm", "cargo", "github-actions"],
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "packageRules": [
    {
      "matchManagers": ["pnpm"],
      "managerFilePatterns": [
        "/^apps/desktop/package.json$/",
        "/^apps/mobile/package.json$/",
        "/^apps/server/package.json$/",
        "/^apps/web/package.json$/",
        "/^package.json$/",
        "/^pnpm-workspace.yaml$/"
      ],
      "schedule": ["before 4am every weekday"],
      "automerge": false,
      "minimumReleaseAge": "1 day",
      "semanticCommits": "enabled",
      "commitMessagePrefix": "pnpm",
      "groupName": "all PNPM dependencies"
    },
    {
      "matchManagers": ["cargo"],
      "managerFilePatterns": ["/^apps/desktop/src-tauri/Cargo.toml$/"],
      "schedule": ["before 5am every weekday"],
      "automerge": false,
      "minimumReleaseAge": "3 days",
      "semanticCommits": "enabled",
      "commitMessagePrefix": "cargo",
      "groupName": "all Cargo dependencies"
    },
    {
      "matchManagers": ["github-actions"],
      "managerFilePatterns": [
        "/^\\.github/workflows/ci.yml$/",
        "/^\\.github/workflows/codeql.yml$/",
        "/^\\.github/workflows/dependency-review.yml$/",
        "/^\\.github/workflows/greetings.yml$/",
        "/^\\.github/workflows/label.yml$/"
      ],
      "schedule": ["before 6am every weekday"],
      "automerge": false,
      "minimumReleaseAge": "1 day",
      "semanticCommits": "enabled",
      "commitMessagePrefix": "gha",
      "groupName": "GitHub Actions workflows"
    },
    {
      "automerge": false,
      "groupName": "TypeScript types",
      "matchPackageNames": ["/^@types//"]
    },
    {
      "automerge": false,
      "groupName": "Linting & Formatting",
      "matchPackageNames": ["/^eslint/", "/^prettier/", "/typescript/"]
    }
  ],
  "postUpdateOptions": [
    "pnpmDedupe",
    "yarnDedupeFewer",
    "rebaseStalePrs",
    "scheduleDaily"
  ],
  "timezone": "Europe/Paris",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "labels": ["renovate", "dependencies"],
  "reviewers": ["mon-username-github"],
  "assignees": ["mon-username-github"],
  "semanticCommitScope": "deps"
}
